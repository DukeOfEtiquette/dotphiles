## PANEL
### source: https://www.schemecolor.com/dark-forest-greens-color-combination.php
bar {
   colors {
        background #051F20
        statusline #CC9600
        separator #ffffff

        # colour of border, background, and text
        focused_workspace       #051F20 #ffffff #051F20
        active_workspace        #2f343f #2f343f #d8dee8
        inactive_workspace      #051F20 #2f343f #d8dee8
        urgent_workspace        #000000 #fff000 #000fff
    }

	separator_symbol " | "

  status_command i3status
}

